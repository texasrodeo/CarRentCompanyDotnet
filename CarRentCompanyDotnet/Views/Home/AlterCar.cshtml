
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AlterCar</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div>
        <h3>Форма редактирования автомобиля</h3>
        <form method="post" action="">
            <input type="hidden" value="true" name="Avaliability" />
            <div class="form-group">

                <label for="Brand">Введите марку машины</label>
                <input type="text" required id="Brand" name="Brand" />


            </div>
            <div class="form-group">
                <label for="Info">Введите информацию о машине</label>
                <input type="text" required id="Info" name="Info" />
            </div>

            <div class="form-group">
                <label for="Price">Введите стоимость аренды автомобиля</label>
                <input type="text" required id="Price" name="Price" />
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <br />
    <a href="/Home/Index">На главную</a>
</body>
</html>
