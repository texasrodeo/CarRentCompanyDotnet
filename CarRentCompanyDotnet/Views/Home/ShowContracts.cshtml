@model IEnumerable<CarRentCompanyDotnet.Models.Car>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <title>Список запросов на аренду</title>
</head>
<body>
    <h1>Список запросов на аренду</h1>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Сайт компании по аренде автомобилей", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    @if (ViewBag.Count != 0)
    {
        <div class="row">
            <div class="col-md-4">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th>Id запроса</th>
                            <th>Id клиента</th>
                            <th>Id машины </th>
                            <th>Дата начала аренды</th>
                            <th>Дата окончания аренды</th>
                        </tr>
                        @foreach (var c in ViewBag.Requests)
                        {

                            <tr>
                                <th>@c.Id</th>
                                <th>@c.ClientId</th>
                                <th>@c.CarId</th>
                                <th>@c.Start</th>
                                <th>@c.End</th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        @*<table border="1" cellpadding="3">
                <tr>
                    <th>Id запроса</th>
                    <th>Id клиента</th>
                    <th>Id машины </th>
                    <th>Дата начала аренды</th>
                    <th>Дата окончания аренды</th>
                </tr>
                @foreach (var c in ViewBag.Requests)
                {

                    <tr>
                        <th>@c.Id</th>
                        <th>@c.ClientId</th>
                        <th>@c.CarId</th>
                        <th>@c.Start</th>
                        <th>@c.End</th>
                    </tr>
                }
            </table>*@
    }
    else
    {
        <h3>Здесь пока ничего нет</h3>
    }
    <form method="get" action="">
        <label for="select">
            Сортировка
        </label>
        <select name="sort">
            <option value="requests">Показать неподтвержденные запросы</option>
            <option value="approved">Показать подтвержденные запросы</option>
            <option value="all">Показать все запросы</option>
        </select>
        <br />
        <input type="submit" value="Показать" />
    </form>

    <a class="btn btn-primary" href="/Home/ShowCars" role="button">Назад</a>

    <div>
    </div>
</body>
</html>
