@model CarRentCompanyDotnet.Models.IndexViewModel
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Личный кабинет";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    @if (ViewBag.Role == "admin")
    {
        <h4>Личный кабинет администратора</h4>
    }
    else
    {
        <h4>Данные пользователя</h4>
    }
    <hr />
    <dl class="dl-horizontal">
        <dt>@ViewBag.Function</dt>
        <dd>

            @if (ViewBag.Role == "admin")
            {
                @Html.ActionLink("Показать", "ShowContracts", "Home");
            }
            else if (ViewBag.Role == "user")
            {
                @*@Html.ActionLink("Показать Ваш список запросов на аренду", "ShowUserContracts", "Home", new
                    {
                        id = @ViewBag.Id
                    });*@
                <a href="/Home/ShowUserContracts/@ViewBag.Id">Показать</a>
            }





        </dd>

    </dl>
    <h4>Изменение параметров учетной записи</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Пароль:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Смена пароля", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Создать", "SetPassword")
            }
            ]
        </dd>

    </dl>
</div>
